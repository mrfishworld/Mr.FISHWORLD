              <h2 class="trending">Most Recent Posts</h1>
  
                  <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                              
                              
                      <div class="owl-carousel owl-theme">
                            
                        <% popularPosts.forEach(popularPost => { %>
                          <div class="post">
                              <div class="img">
                                  <%- popularPost.img %>
                              </div>
                              <div class="post-info">
                                  <div class="topic">
                                      <h5><%= popularPost.topic %></h5>
                                  </div>
                                  <div class="more-post-info">
