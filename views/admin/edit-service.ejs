<div class="admin_wrapper">
    <div class="left-sidebar">
        <ul>
            <li><a href="/dashboard">Manage Posts</a></li>
            <li><a href="/topics">Manage Topics</a></li>
            <li><a href="/users">Manage Users</a></li>
            <li><a href="/latest-projects">Manage Projects</a></li>
            <li><a href="/my-services">Manage Services</a></li>
        </ul>
    </div>
    <div class="admin-content">
        <div class="button-group">
            <a href="/add-service" class="btn admin-btn">Add New Services</a>
            <a href="/my-services" class="btn admin-btn">Manage Services</a>
        </div>

        <div class="content">
            <h2 class="page-title">Edit Service</h2>

            <div>
                <form action="/delete-service/<%= service._id %>?_method=DELETE" method="post">
                    <button type="submit" class="btn admin-btn">Delete this Service</button>
                </form>
            </div>

            <% if(messages.error){ %>
                <ul class="error">
                    <li><%= messages.error %></li>
                </ul>
            <% } %>
           
            <form action="/edit-service/<%= service._id %>" method="post" enctype="multipart/form-data" class="add-post">

                <div>
                    <label for="title">Title</label>
                    <input type="text" name="title" class="text-input" value="<%= service.title %>">
                </div>

                <div>
                    <label for="preview">Preview</label>
                    <textarea name="preview" id="body" cols="50" rows="5"><%= service.preview %></textarea>
                </div>

                <div>
                    <label for="body">Body</label>
                    <textarea name="body" id="mytextarea" cols="50" rows="10"><%= service.body %></textarea>
                </div>
              
                <div>
                    <input type="submit" class="btn" value="Add-Changes">
                </div>
            </form>

        </div>
    </div>
</div>
