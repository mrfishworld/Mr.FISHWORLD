<div class="main-shop">
    <div class="hero">
        <div class="hero-bg"></div>
        <img src="Img/swimming-equipment.webp" alt="">
        <div class="overlay">
          <h1>Welcome to Our Shop</h1>
        </div>
      </div>
    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    
                    
                    <div class="owl-carousel owl-theme">
                        <div class="item"><img src="/Img/suites.jfif" alt="">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Swim Suits</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">A one time offer for a very cozy pair of swim suit at reduced a price.</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="tel:+256705164400">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="item"><img src="/Img/caps.jpg" alt="">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Swim Caps</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Ensure your hair remains dry after every swim with this authentic swim cap. It is high quality and guarantees results</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="tel:+256705164400">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="item"><img src="/Img/kboards.webp" alt="">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Kickboards</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Do you want to kick fast? We got you covered at an extremely affordable price. 100% guaranteed results.</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="tel:+256705164400">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="/Img/cap-s-offer.avif" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">Save 20%</h6>
                        <h3 class="text-white mb-3">Special Offer</h3>
                        <a href="tel:+256705164400" class="btn btn-primary">Shop Now</a>
                    </div>
                </div>
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="/Img/ssuit-s-offer.png" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">Save 20%</h6>
                        <h3 class="text-white mb-3">Special Offer</h3>
                        <a href="tel:+256705164400" class="btn btn-primary">Shop Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->

    <!-- Products Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
        <div class="row px-xl-5">

            <% if (shops.length === 0) { %>
                <p>No items available at the moment.</p>
            <% } else { %>
                
                <% shops.forEach(function(shop) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <div class="img-fluid w-100">
                            <%- shop.img %>
                        </div>
                        
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="tel:+256705164400"><i class='bx bx-cart-add'></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class='bx bx-heart'></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href=""><%= shop.name %></a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5><%= shop.newPrice %></h5><h6 class="text-muted ml-2"><del><%= shop.oldPrice %></del></h6>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
            <% } %>
            
            
        </div>
    </div>
    <!-- Products End -->
</div>